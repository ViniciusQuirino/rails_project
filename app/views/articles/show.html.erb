<article class="blog-post">
  <h2 class="display-5 link-body-emphasis mb-1"><%= @article.title%></h2>
  <p class="blog-post-meta"><%= month_day_comma_year(@article.created_at)%></p>
  <p><%= @article.body %></p>
  <div class="d-flex gap-2">
    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-secondary' %>
    <%= button_to 'Destroy', article_path(@article), method: :delete,data: { "turbo-confirm": "Are you sure?" },class:'btn btn-danger'%>
    <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
  </div>
</article>
