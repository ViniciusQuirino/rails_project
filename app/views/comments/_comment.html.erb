<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= month_day_comma_year(comment.created_at)%></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">Commenter: <%= comment.user.name%></h6>
    <p class="card-text"><%= comment.body%></p>
    <%= button_to 'Destroy', article_comment_path(@article, comment),
    method: :delete,data: { "turbo-confirm": "Are you sure?" },
    class:'btn btn-danger' if policy(comment).destroy?%>
  </div>
</div>