<% if user_signed_in? %>
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= current_user.name %>
    </button>
    <ul class="dropdown-menu aligm-items-center mg">
      <li><%= link_to 'Edit User', edit_user_registration_path, class: 'dropdown-item '%></li>
      <li>
        <form class="button_to dropdown-item ps-0" method="post" action="<%= destroy_user_session_path %>">
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "button_to dropdown-item" %>
        </form>
      </li>
    </ul>
  </div>
<% else %>
  <div class='d-flex gap-2 align-items-center'>
    <%= link_to 'Sign in', new_user_session_path, class: 'link-secondary'%>
    <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-sm btn-outline-secondary'%>
  </div>
<%end%>